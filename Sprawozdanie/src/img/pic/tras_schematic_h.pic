.PS
	define pi {3.1415}
	define ver {(cos($1),sin($1))}
	define rbox {[
		rot = $1;
		w = $2; h = $3;
		W:Here;
		line by ver(rot-pi/2)*h/2; SW: Here;
		line by ver(rot)*w/2; S: Here;
		line by ver(rot)*w/2; SE: Here;
		line by ver(rot+pi/2)*h/2; E: Here;
		line by ver(rot+pi/2)*h/2; NE: Here;
		line by ver(rot+pi)*w/2; N: Here;
		line by ver(rot+pi)*w/2; NW: Here;
		line by ver(rot-pi/2)*h/2;
	]}
	define propf {[
		define cpt {CP.c + ver($1)*CP.rad}
		CP:circle;
		rot = $1;
		line from cpt(rot+pi/4) to cpt(rot+5*pi/4);
		line from cpt(rot-pi/4) to cpt(rot-5*pi/4);
		circle at CP.c radius 0.04 fill 0;
	]}
	define props {[
		RB:rbox($1,$2,$3);
		circle at (RB.S+RB.N)/2 radius 0.04 fill 0;
		line from RB.W to RB.E;
	]}
	
	scale=1
	bangle=pi/6
	TP:props(bangle,0.6,0.1); move to TP.c;
	line by ver(bangle);
	CEN:Here; circle at CEN radius 0.04 fill 0;
	move to CEN;
	line by ver(bangle);
	MP:propf(bangle) at Here;
	move to CEN;
	line right 0.9 dashed;
	arc <- cw from CEN + ver(bangle)*0.4 to CEN + (0.4,0);
	move to CEN + ver(bangle/2)*0.55; "$\phi_h$"
	rbox(bangle,0.2,0.2) at CEN;

	"Śmigło" "ogonowe (t)" at TP.n + (0,0.2);
	"Śmigło" "główne (m)" at MP.n + (0,0.2);
	
	line from CEN + ver(bangle+pi/2)*0.3 to CEN + ver(bangle-pi/2)*0.8 dashed;
	UC:(Here*3 + CEN)/4
	line from TP.c to TP.c + ver(bangle-pi/2)*0.8 dashed;
	UT:(Here*3 + TP.c)/4
	line from MP.c to MP.c + ver(bangle-pi/2)*0.8 dashed;
	UM:(Here*3 + MP.c)/4
	move to CEN + ver(bangle+pi/2)*0.3;
	"$vx$" ljust above;
	line <-> from UC to UT "$l_t$" below ljust;
	line <-> from UC to UM "$l_m$" below ljust;
.PE
