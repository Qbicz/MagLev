.PS
	define pi {3.1415}
	define ver {(cos($1),sin($1))}
	
	scale=1
	bangle=pi/6
	IH:circle; move to IH.se "$I_h(\phi_v)$" below ljust;
	circle at IH.c radius 0.04 fill 0;
	line from IH.c to IH.c + (0.7,0) dashed;
	line from IH.c to IH.c + ver(bangle)*IH.rad;
	line by ver(bangle)*(0.7-IH.rad) dashed;
	arc <- cw from IH.c + ver(bangle)*0.4 to IH.c + (0.4,0);
	move to IH.c + ver(bangle/2)*0.55; "$\phi_h$"
	arc <- cw from IH.c + ver(bangle+pi/2+0.8)*0.4 to IH.c + ver(bangle+pi/2)*0.4 with .c at IH.c;
	"$T_{mh},T_{th},T_{fh}$" at IH.c + ver(bangle+pi/2)*0.4 above;
.PE
